{
  "_meta": {
    "sources": [
      "loopback/common/models",
      "loopback/server/models",
      "../common/models",
      "./models"
    ],
    "mixins": [
      "loopback/common/mixins",
      "loopback/server/mixins",
      "../common/mixins",
      "./mixins"
    ]
  },
  "chat": {
    "dataSource": "mongodb",
    "public": true,
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "getAll": true,
          "profilePicUrl": true,
          "updateName": true,
          "getMessages": true,
          "markSeen": true,
          "loadMore": true,
          "sendMessage": true,
          "checkRecentMessages": true,
          "loadFile": true,
          "uploadMedia": true
        }
      }
    }
  },
  "message": {
    "dataSource": "mongodb",
    "public": false
  }
}
